<%= form_for(@link) do |f| %>
  <%= render 'shared/error_messages', :obj => @link %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :url %>
  <%= f.text_field :url %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br/>
  <%= f.submit "Add link!", class: "btn btn-large btn-primary" %>
<% end %>